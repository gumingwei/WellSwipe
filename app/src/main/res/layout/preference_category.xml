<?xml version="1.0" encoding="utf-8"?>
<com.well.swipe.preference.PreferenceCategory xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preference_height"
    android:background="@drawable/check_item_selector">

    <ImageView
        android:id="@id/preference_icon"
        android:layout_width="@dimen/preference_item_icon_size"
        android:layout_height="@dimen/preference_item_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@id/preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/preference_switchbtn"
        android:layout_toRightOf="@id/preference_icon"
        android:textColor="@color/white"
        android:textSize="@dimen/preference_category_title_size" />e

    <com.well.swipecomm.view.SwitchButton
        android:id="@id/preference_switchbtn"
        style="@style/SwitchButtonStyleMD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:gravity="center_vertical" />

</com.well.swipe.preference.PreferenceCategory>